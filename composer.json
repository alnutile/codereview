{
    "name": "alnutile/codereview",
    "type": "library",
    "description": "CLI to help with the many steps",
    "keywords": [
        "alnutile",
        "codereview"
    ],
    "homepage": "https://github.com/alnutile/codereview",
    "license": "MIT",
    "authors": [
        {
            "name": "Al",
            "email": "alfrednutile@gmail.com",
            "homepage": "https://github.com/alnutile",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "guzzlehttp/guzzle": "^6.3",
        "larapack/dd": "1.*",
        "mnapoli/silly": "^1.5",
        "mnapoli/silly-pimple": "^1.0",
        "symfony/console": "~3.2",
        "symfony/process": "~3.2",
        "symfony/yaml": "^3.2",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3",
        "mockery/mockery": "0.9.*"
    },
    "autoload": {
        "psr-4": {
            "Alnutile\\Codereview\\": "src"
        },
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Alnutile\\Codereview\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "bin": [
        "codereview"
    ]
}
